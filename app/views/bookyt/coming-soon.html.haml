#coming_soon
  .head
    .container
      .span6.text
        %h4 Buchhaltung einfach online!
        %p
          Möchten Sie zu den ersten gehören? Kontaktieren sie uns über <a href="mailto:info@bookyt.ch">info@bookyt.ch</a>.
      .span6.count
  .email_wrapp
    .container
      .span11.wrapp
        %p
          %strong Ich möchte informiert werden:
        = form_tag 'subscribe', :remote => true do
          %input{:name => 'email', :placeholder => "Email address...", :type => "text"}/
          %button.btn.send ok

= render :template => 'bookyt/features'
