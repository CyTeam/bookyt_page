.ankor#bookyt
.row
  .span12
    .page-header
      %h1
        Bookyt
        %small Buchhaltung ganz einfach
.row
  .span3
    = link_to "http://bookyt.ch", :target => '_blank', :class => 'thumbnail' do
      = image_tag 'bookyt.png'
