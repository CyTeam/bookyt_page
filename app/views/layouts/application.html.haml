!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Bookyt"
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        padding-bottom: 40px;
      }
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body{'data-spy' => "scroll", 'data-target' => ".subnav", 'data-offset' => "50"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
          %a.brand{:href => root_path}Bookyt
          .container.nav-collapse
            %ul.nav
              %li= link_to "Tour", "/features"
              %li= link_to "Demo", "http://bookyt.demo.cyt.ch"
            %ul.nav.pull-right
              %li= link_to "Unternehmen", "http://cyt.ch"
              %li= link_to "Entwickler", "https://github.com/huerlisi/bookyt"

    .container
      = yield
    
    %footer.footer
      .container
        %div{:style => 'color: #999; font-size: 20px'}
          = image_tag 'logo_small.png', :class => 'icon-logo', :style => 'width: 22px; height: 22px; background-position: 22px 22px;'
          CyT GmbH
          • 041/544 47 60
          =link_to '• info@cyt.ch', 'mailto:info@cyt.ch', :style => 'color: #999'
          =link_to '• www.cyt.ch', 'http://www.cyt.ch', :style => 'color: #999'

    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
