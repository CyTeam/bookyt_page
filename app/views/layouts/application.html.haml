!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : t('application.title')
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = favicon_link_tag

  %body{'data-spy' => "scroll", 'data-target' => ".subnav", 'data-offset' => "50"}
    .navbar-background
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
          %a.brand{:href => root_path}
            = image_tag("logo.png", :size => "30x30", :alt => "Logo", :class => "icon-logo")
            = t('application.title')
          .container.nav-collapse
            = render_navigation(:context => :main, :renderer => BootstrapTopbarList) 
            .pull-right
              = render_navigation(:context => :second, :renderer => BootstrapTopbarList) 
  
  .content-container
    .container
      = yield
